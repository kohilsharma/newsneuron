# ===============================================
# NewsNeuron Combined Environment Variables
# ===============================================
# This unified env example consolidates backend and frontend variables.
# Copy to .env (root) or split into service-specific env files as needed.
# Lines starting with BACKEND_ / FRONTEND_ comments show original grouping.

# -----------------------
# Backend: Database Configuration
# -----------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# -----------------------
# Backend: AI / LLM Providers
# -----------------------
OPENROUTER_API_KEY=sk-or-your_openrouter_api_key

# -----------------------
# Backend: Application Settings
# -----------------------
APP_NAME=NewsNeuron
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# CORS (array JSON syntax)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# -----------------------
# Backend: Security
# -----------------------
SECRET_KEY=your_super_secret_key_here_change_this_in_production_32_chars_min
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------
# Backend: Performance / Caching
# -----------------------
REDIS_URL=redis://localhost:6379
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# -----------------------
# Backend: Logging & Monitoring
# -----------------------
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# -----------------------
# Backend: Rate Limiting
# -----------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# -----------------------
# Frontend: API Configuration
# -----------------------
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# -----------------------
# Frontend: Application
# -----------------------
VITE_APP_NAME=NewsNeuron
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Where News Meets Intelligence"

# -----------------------
# Frontend: Feature Flags
# -----------------------
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# -----------------------
# Frontend: External Services
# -----------------------
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# -----------------------
# Frontend: Dev Settings
# -----------------------
VITE_DEV_SERVER_PORT=5173

# ===============================================
# Production Overrides (Uncomment & adjust)
# ===============================================
# DEBUG=false
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# CORS_ORIGINS=["https://your-frontend-domain.vercel.app"]
