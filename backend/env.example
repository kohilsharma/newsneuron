# ===============================================
# NewsNeuron Backend Environment Variables
# ===============================================

# Database Configuration
# -----------------------
# Supabase (PostgreSQL + pgvector for semantic search)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Neo4j (Knowledge graph for entity relationships)
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# AI Services Configuration
# -------------------------
# OpenRouter (LLM provider - no OpenAI dependency)
OPENROUTER_API_KEY=sk-or-your_openrouter_api_key

# Note: Embeddings are generated locally using sentence-transformers (free)

# Application Settings
# -------------------
APP_NAME=NewsNeuron
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# CORS Settings (Frontend URLs)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Security Configuration
# ----------------------
SECRET_KEY=your_super_secret_key_here_change_this_in_production_32_chars_min
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance & Caching
# ---------------------
# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Database connection pooling
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Logging & Monitoring
# -------------------
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Rate Limiting
# -------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===============================================
# Production Example (uncomment and modify)
# ===============================================
# DEBUG=false
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# CORS_ORIGINS=["https://your-frontend-domain.vercel.app"]
# SECRET_KEY=your_production_secret_key_32_characters_minimum
# RATE_LIMIT_PER_MINUTE=30
